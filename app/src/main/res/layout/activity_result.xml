<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="#282196F3"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/resultActivityMainTextTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/resultActivityScoreTextTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100 БАЛЛОВ"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultActivityMainTextTV"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/resulDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Характеристика"
        android:gravity="start"
        android:textStyle="normal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultActivityScoreTextTV"
        app:layout_constraintVertical_bias="0.132" />
</androidx.constraintlayout.widget.ConstraintLayout>