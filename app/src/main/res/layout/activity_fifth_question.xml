<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FifthQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:background="#4D4CAF50">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fifthActivityQuestionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кто убил Кеннеди?"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="60dp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/fifthActivityQuestionAnswerOneRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Питер Пен"/>

            <RadioButton
                android:id="@+id/fifthActivityQuestionAnswerTwoRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Том Круз"/>

            <RadioButton
                android:id="@+id/fifthActivityQuestionAnswerThreeRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Ли Харви Освальд"/>



        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>